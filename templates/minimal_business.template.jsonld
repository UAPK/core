{
  "@context": "https://uapk.ai/context/v0.1",
  "@id": "urn:uapk:{{instance_id}}:v1",
  "uapkVersion": "0.1",
  "name": "{{business_name}}",
  "description": "{{description | default('Minimal UAPK business instance')}}",
  "executionMode": "{{execution_mode | default('dry_run')}}",

  "cryptoHeader": {
    "hashAlg": "sha256",
    "manifestHash": "",
    "planHash": "",
    "merkleRoot": "",
    "signature": "dev-signature-placeholder",
    "signedBy": "{{instance_id}}-dev-key",
    "signedAt": null
  },

  "corporateModules": {
    "governance": {
      "roles": ["Owner", "Admin", "Operator", "Viewer"],
      "approvalWorkflow": {
        "defaultApprovers": ["Owner", "Admin"],
        "escalationTimeoutMinutes": 60,
        "requiredApprovals": 1
      },
      "auditRetentionDays": 2555
    },

    "policyGuardrails": {
      "toolPermissions": {
        "DefaultAgent": ["read_data", "write_log"]
      },
      "denyRules": ["delete_audit_events"],
      "rateLimits": {
        "actionsPerMinute": {{actions_per_minute | default(100)}},
        "invoicesPerDay": 500,
        "nftMintsPerDay": 10
      },
      "liveActionGates": [
        {% if enable_nft_minting | default(false) | tojson == "true" %}
        "mint_nft",
        {% endif %}
        "send_invoice_email"
      ]
    },

    "productOps": {
      "slas": {
        "deliverableCompletionHours": 24,
        "supportResponseHours": 4,
        "invoiceGenerationHours": 1
      },
      "retryPolicy": {
        "maxRetries": 3,
        "backoffSeconds": 10
      },
      "idempotencyWindowSeconds": 3600
    },

    "legalCompliance": {
      "disclaimers": [
        "This instance was generated by an autonomous UAPK compiler."
      ],
      "piiHandling": "encrypt-at-rest",
      "dpaFlags": {
        "gdprCompliant": true,
        "ccpaCompliant": true
      },
      "retentionWindows": {
        "userDataDays": 730,
        "auditLogsDays": 2555,
        "invoicesDays": 3650
      },
      "dsarWorkflow": "manual-review-required"
    },

    "financeOps": {
      "chartOfAccounts": {
        "4000": "Revenue - Services",
        "1000": "Accounts Receivable"
      },
      "invoiceNumberingScheme": "INV-{year}-{seq:05d}",
      "payoutPolicy": "simulated"
    },

    "taxOps": {
      "vatRates": {
        "DE": 0.19,
        "FR": 0.20
      },
      "reverseChargeCountries": ["DE", "FR"],
      "validationMethod": "simulated"
    }
  },

  "aiOsModules": {
    "connectors": {
      "database": {
        "type": "sqlite",
        "config": {
          "path": "runtime/{{instance_id}}.db"
        }
      },
      "llm": {
        "type": "simulated",
        "config": {
          "provider": "local-stub",
          "modelId": "deterministic-v1"
        }
      }
    },

    "agentProfiles": [
      {
        "agentId": "{{instance_id}}-agent",
        "role": "Default Agent",
        "capabilities": ["read_data", "write_log"],
        "maxActionsPerMinute": 10
      }
    ],

    "workflows": []
  }
}
